<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_off2"
        android:label="Off Qual Bot"
        android:roundIcon="@mipmap/ic_launcher_off2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OffQualBot"
        tools:targetApi="31">

         <!-- 메인 기능 화면 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Off Qual Bot"
            android:theme="@style/Theme.AppCompat.Light"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout">
            <!-- ✅ 앱 시작 진입점 명시 -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 오프라인 맵 화면 -->
        <activity
            android:name=".offline.OfflineMapActivity"
            android:exported="false"
            android:label="@string/offline_maps"
            android:theme="@style/Theme.AppCompat.Light"
            android:configChanges="orientation|screenSize|keyboardHidden|screenLayout"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>
</manifest>
